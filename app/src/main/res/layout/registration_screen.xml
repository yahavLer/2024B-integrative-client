<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity_registration">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:id="@+id/signup_LBL_signup"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="sign up"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="34dp"
                android:textColor="@color/colorPrimary"
                android:layout_margin="16dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/signup_EDT_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Name: " />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/signup_EDT_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_marginTop="8dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/signup_EDT_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Avatar:"
                android:inputType="phone"
                android:layout_marginTop="8dp" />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/signup_EDT_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:inputType="phone"
                android:layout_marginTop="8dp" />

            <Spinner
                android:id="@+id/signup_SPN_roles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:popupBackground="#ACA4A4"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:entries="@array/roles"/>

            <Spinner
                android:id="@+id/signup_SPN_credit_card_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:entries="@array/credit_card_companies" />

            <Spinner
                android:id="@+id/signup_SPN_club_membership"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:entries="@array/clubs_membership" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/signup_BTN_Register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Register" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

